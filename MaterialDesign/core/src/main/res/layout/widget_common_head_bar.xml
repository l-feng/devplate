<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_home_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/common_color">

        <RelativeLayout
            android:id="@+id/head_bar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:text="@string/cancel"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="18sp" />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/icon_go_back"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/head_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/head_bar_right_btn"
            android:layout_toRightOf="@+id/head_bar_back_btn"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/head_bar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="@drawable/btn_head_bar"
            android:textSize="@dimen/custom_medium_text_size" />

        <RelativeLayout
            android:id="@+id/head_bar_right_image_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/head_bar_right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head_bar_empty_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_empty_common"
            android:gravity="center"
            android:paddingBottom="80dp"
            android:text="@string/empty_list"
            android:textColor="@color/font_text_color"
            android:textSize="@dimen/custom_medium_text_size" />
    </RelativeLayout>

</LinearLayout>
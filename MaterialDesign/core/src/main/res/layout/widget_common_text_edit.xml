<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_edit"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/widget_common_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_widget_item_margin" />


    <TextView
        android:id="@+id/widget_common_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/widget_common_image"
        android:background="@null"
        android:textColor="@color/font_text_color"
        android:textColorHint="@color/black"
        android:textSize="@dimen/custom_medium_text_size"
        android:visibility="visible" />


    <EditText
        android:id="@+id/widget_common_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/widget_common_text"
        android:background="@null"
        android:imeOptions="actionNext"
        android:textColor="@color/font_text_color"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/custom_medium_text_size"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/widget_common_edit_clear_text"
        android:layout_width="@dimen/common_widget_item_arrow"
        android:layout_height="@dimen/common_widget_item_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_widget_item_margin"
        android:src="@drawable/icon_clear_text"
        android:visibility="gone" />
</RelativeLayout>
